                },
                {
                    "type": "text",
                    "id": "client_name",
                    "label": "Client Name",
                    "default": "David.L"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Hero Banner"
        }
    ]
}
{% endschema %}