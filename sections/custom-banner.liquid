        {
            "type": "url",
            "id": "button_url",
            "label": "Button Link"
        }
    ],
    "blocks": [
        {
            "type": "review",
            "name": "Reviews",
            "limit": 3,
            "settings": [
                {
                    "type": "textarea",
                    "id": "review",
                    "label": "Write Reviews",
